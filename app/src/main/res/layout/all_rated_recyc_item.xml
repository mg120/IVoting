<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/all_rated_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_rated_item_title"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="title" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_rated_item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/photo"
            android:background="@drawable/sec_item_img_bg"
            app:civ_border_color="#FFffffff"
            app:civ_border_width="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">



            <ProgressBar
                android:id="@+id/all_rates_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:progressDrawable="@drawable/progress_horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:progress="0" />

            <TextView
                android:id="@+id/all_rated_votes_number"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1111"
                android:textColor="@android:color/white"/>


        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>